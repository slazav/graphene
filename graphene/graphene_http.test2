#!/bin/bash -eu

. ../modules/test_lib.sh

# use non-standard port to avoid collisions with running server
port=8182

# try to stop the server
./graphene_http --stop --port $port --pidfile pid.tmp &>/dev/null ||:

assert_cmd "wget http://localhost:$port -nv -S"\
  "failed: Connection refused." 4

rm -f log.txt

# run the server
assert_cmd "./graphene_http --port $port --pidfile pid.tmp --dbpath . -v 4 --logfile log.txt --dofork" "" 0
sleep 1

# remove all test databases
for i in *.db; do
  [ -f $i ] || continue
  ./graphene -d . delete ${i%.db}
done
rm -f -- __db.* log.*

# create a database
./graphene -d . create tmp_db double
./graphene -d . put tmp_db 10 123
./graphene -d . put tmp_db 11 124
./graphene -d . put tmp_db 12 125



# get with empty url -- simple-json
assert_cmd_substr "wget http://localhost:$port -O - -nv -S"\
  "HTTP/1.1 200 OK" 0

# options with empty url -- simple-json
assert_cmd_substr "wget http://localhost:$port --method OPTIONS -O - -nv -S"\
  "HTTP/1.1 200 OK" 0

# POST with empty url -- unknown query
assert_cmd_substr "wget http://localhost:$port --post-data "{}" -O - -nv -S"\
  "Error: Unknown query" 8

# search - tmp_db
assert_cmd_substr "wget http://localhost:$port/search --post-data "{}" -O -"\
  '["tmp_db"]' 0

# query
assert_cmd_substr "wget \"http://localhost:$port/query\" --post-data "{}" -O - -nv -S"\
  "Error: Bad range setting" 8

# annotations
assert_cmd_substr "wget \"http://localhost:$port/annotations\" --post-data "{}" -O - -nv -S"\
  "Error: Bad range setting" 8


# simple GET interface
# get
assert_cmd_substr "wget \"http://localhost:$port/unknown\" -O - -nv -S"\
  "Error: bad command: unknown" 8

assert_cmd_substr "wget \"http://localhost:$port/get?name=tmp_db\" -O - -o /dev/null"\
  "12.000000000 125" 0

assert_cmd_substr "wget \"http://localhost:$port/get?name=tmp_db&t2=10\" -O - -o /dev/null"\
  "10.000000000 123" 0

assert_cmd_substr "wget \"http://localhost:$port/get?name=tmp_db&t1=10\" -O - -nv -S"\
  "Error: unknown option: t1" 8

# get_next
assert_cmd_substr "wget \"http://localhost:$port/get_next?name=tmp_db\" -O - -o /dev/null"\
  "10.000000000 123" 0

assert_cmd_substr "wget \"http://localhost:$port/get_next?name=tmp_db&t2=1\" -O - -nv -S"\
  "Error: unknown option: t2" 8

# get_range
assert_cmd_substr "wget \"http://localhost:$port/get_range?name=tmp_db&t1=10&t2=12&tfmt=rel\" -O - -o /dev/null"\
  "0.000000000 123
1.000000000 124
2.000000000 125" 0

# get_range
assert_cmd_substr "wget \"http://localhost:$port/get_range?name=tmp_db&t1=10&t2=12\" -O - -o /dev/null"\
  "10.000000000 123
11.000000000 124
12.000000000 125" 0

# list
assert_cmd_substr "wget \"http://localhost:$port/list\" -O - -o /dev/null"\
  "tmp_db" 0


# stop the server
assert_cmd "./graphene_http --port $port --stop --pidfile pid.tmp" "" 0

rm -f log.txt

